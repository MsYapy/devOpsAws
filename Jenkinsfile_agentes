pipeline {
    agent none

    stages {
        stage('Get Code') {
            agent { label 'linux-agent-1' }
            steps {
                git branch: 'develop',
                    url: 'https://github.com/MsYapy/devOpsAws.git',
                    credentialsId: 'yy'

                script {
                    echo "Iniciando pipeline CI/CD completo"
                }
                stash includes: '**', name: 'source-code'
            }
        }

        // =============================================
        // STAGES CI - Staging
        // =============================================

        stage('Static Analysis') {
            parallel {
                stage('Bandit Security') {
                    agent { label 'linux-agent-1' }
                    steps {
                        unstash 'source-code'
                        sh '''bandit --exit-zero -r src/ -f custom -o bandit.out --msg-template "{abspath}:{line}: [{test_id}] {msg}"'''
                        recordIssues tools: [pyLint(name: 'Bandit', pattern: 'bandit.out')]
                    }
                }
                stage('Flake8 Linting') {
                    agent { label 'linux-agent-2' }
                    steps {
                        unstash 'source-code'
                        sh 'flake8 --exit-zero --format=pylint src/ > flake8.out'
                        recordIssues tools: [flake8(name: 'flake8', pattern: 'flake8.out')]
                    }
                }
            }
        }

        stage('Deploy Staging') {
            agent { label 'linux-agent-1' }
            steps {
                unstash 'source-code'
                sh 'sam validate --region us-east-1'
                sh 'sam build'
                sh '''
                    sam deploy \
                        --stack-name resCP14yapy-staging \
                        --region us-east-1 \
                        --parameter-overrides Stage=staging \
                        --capabilities CAPABILITY_IAM \
                        --no-disable-rollback \
                        --resolve-s3 \
                        --no-fail-on-empty-changeset
                '''
            }
        }

        stage('Rest Test Staging') {
            agent { label 'linux-agent-2' }
            steps {
                unstash 'source-code'
                script {
                    env.BASE_URL = sh(
                        script: "aws cloudformation describe-stacks --stack-name resCP14yapy-staging --query 'Stacks[0].Outputs[?OutputKey==`BaseUrlApi`].OutputValue' --region us-east-1 --output text",
                        returnStdout: true
                    ).trim()

                    echo "BASE_URL Staging: ${env.BASE_URL}"
                }

                // Staging: ejecuta TODOS los tests (lectura y escritura)
                sh 'pytest test/integration/todoApiTest.py -m "api or readonly"'
            }
        }

        // =============================================
        // STAGES CD - Production
        // =============================================

        stage('Deploy Production') {
            agent { label 'linux-agent-1' }
            steps {
                unstash 'source-code'
                sh 'sam validate --region us-east-1'
                sh 'sam build'
                sh '''
                    sam deploy \
                        --stack-name resCP14yapy-production \
                        --region us-east-1 \
                        --parameter-overrides Stage=production \
                        --capabilities CAPABILITY_IAM \
                        --no-disable-rollback \
                        --resolve-s3 \
                        --no-fail-on-empty-changeset
                '''
            }
        }

        stage('Rest Test Production') {
            agent { label 'linux-agent-2' }
            steps {
                unstash 'source-code'
                script {
                    env.BASE_URL = sh(
                        script: "aws cloudformation describe-stacks --stack-name resCP14yapy-production --query 'Stacks[0].Outputs[?OutputKey==`BaseUrlApi`].OutputValue' --region us-east-1 --output text",
                        returnStdout: true
                    ).trim()

                    echo "BASE_URL Production: ${env.BASE_URL}"
                }

                // Production: SOLO tests de lectura (no modifica datos)
                sh 'pytest test/integration/todoApiTest.py -m readonly'
            }
        }
    }

    post {
        always {
            node('linux-agent-1') {
                cleanWs()
            }
            node('linux-agent-2') {
                cleanWs()
            }
        }
    }
}
